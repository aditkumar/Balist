<div class="container">

    <div class="row-fluid">

        <!-- Left Buffer -->
        <div class="span2">
            <!--Blank buffer-->
        </div>

        <div class="span8">
            <div class="balist">

                <!--List Header-->
                <div class="row-fluid">
                    <div class="balistHead">
                        <h1><%=escape_html @currentList.listName %></h1>
                    </div> <!-- closes balistHead div -->
                </div> <!--closes top row-->


                <div class="span5" >
                    <div class="listTop">
                        <h2><%=escape_html @currentList.lefthand %></h2>
                        <a href="#" id="sortLeft" class="sort" rel="popover" data-content="Up" data-original-title="Sort"><i class="icon-list"></i></a>
                        <a href="#" class="addToggle"><i class="icon-plus"></i></a>
                    </div>

                    <ul class="balistListLeft">
                        <% @leftList.each do |item| %>
                        <li>
                            <div class="listItem" id="<%=item.itemid%>">
                                <p class= "itemTitle editable"> <%=escape_html item.header %></p>
                                <p class="note editable"><%=escape_html item.comment %></p>
                            </div>
                        </li>
                        <%end%>
                        <li>
                            <form class="form-inline" action="" method="post">
                                <input type="text" name="newLeftHeader" class="addItemHeader" placeholder="+ Add Item">
                                <input type="text" name="newLeftComment" class="addItemComment" placeholder="Enter Comment" style="display: none">
                                <input type="submit" style="display: none">
                            </form>
                        </li>
                    </ul>

                </div> <!-- closes span4 -->

                <div class="span5 offset1">
                    <div class="listTop">
                        <h2><%=escape_html @currentList.righthand %></h2>
                        <a href="#" id="sortRight" class="sort"><i class="icon-list"></i></a>
                        <a href="#" class="addToggle"><i class="icon-plus"></i></a>
                    </div>

                    <ul class="balistListRight">
                        <% @rightList.each do |item| %>
                        <li>
                            <div class="listItem" id="<%=item.itemid%>">
                                <span class="deleteItem icon-trash"></span>
                                <p class= "itemTitle editable"> <%=escape_html item.header %></p>
                                <p class="note editable"><%=escape_html item.comment %></p>
                            </div>
                        </li>
                        <%end%>
                        <li>
                            <form class="form-inline" action="#" method="post">
                                <input type="text" name="newRightHeader" class="addItemHeader" placeholder="+ Add Item">
                                <input type="text" name="newRightComment" class="addItemComment" placeholder="Enter Comment">
                                <input type="submit" class="itemSubmit">
                            </form>
                        </li>
                    </ul>
                </div> <!--closes Span 4-->
            </div> <!--closes balist div-->
        </div>
        <div class="span2">

        </div>
    </div>


